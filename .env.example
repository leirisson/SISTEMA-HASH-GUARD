# Configuração do Banco de Dados PostgreSQL
DATABASE_URL="postgresql://username:password@localhost:5432/hashguard_db"

# Configuração do Servidor
PORT=3000
NODE_ENV=development

# Configuração de Upload de Arquivos
UPLOAD_DESTINATION=./uploads
MAX_FILE_SIZE=104857600  # 100MB em bytes
ALLOWED_FILE_TYPES=pdf,doc,docx,jpg,jpeg,png,gif,mp4,avi,zip,rar

# Configuração de Segurança
JWT_SECRET=your-super-secret-jwt-key-here
BCRYPT_ROUNDS=12

# Configuração PGP (Assinatura Digital)
PGP_PASSPHRASE=your-pgp-passphrase-here
PGP_KEY_NAME=HashGuard System
PGP_KEY_EMAIL=system@hashguard.com

# Configuração OpenTimestamps
OTS_CALENDAR_URL=https://alice.btc.calendar.opentimestamps.org
OTS_ENABLE=true

# Configuração de Logs
LOG_LEVEL=info
LOG_FILE_PATH=./logs/hashguard.log

# Configuração CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:3001
CORS_CREDENTIALS=true

# Configuração Swagger
SWAGGER_TITLE=HashGuard API
SWAGGER_DESCRIPTION=Sistema de preservação e verificação de evidências digitais
SWAGGER_VERSION=1.0.0
SWAGGER_PATH=api/docs

# Configuração de Rate Limiting
RATE_LIMIT_TTL=60000  # 1 minuto em ms
RATE_LIMIT_MAX=100    # máximo de requests por TTL

# Configuração de Backup
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Todo dia às 2h da manhã
BACKUP_RETENTION_DAYS=30

# Configuração de Notificações (opcional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=noreply@hashguard.com

# Configuração de Monitoramento (opcional)
MONITORING_ENABLED=false
SENTRY_DSN=your-sentry-dsn-here

# Configuração de Cache Redis (opcional)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0